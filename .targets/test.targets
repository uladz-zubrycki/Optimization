<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<PackagesPath Condition="'$(PackagesPath)' == ''">$(SolutionDir)packages</PackagesPath>
		<xUnitLibName Condition="'$(xUnitLibName)' == ''">xunit.runner.msbuild.dll </xUnitLibName>
		<xUnitLibPath Condition="'$(xUnitLibPath)' == ''">$(PackagesPath)\xunit.runners.1.9.2\tools\$(xUnitLibName)</xUnitLibPath>
	</PropertyGroup>
	<ItemGroup>
		<TestAssemblies Include="$(OutputPath)\*.Tests.dll"/>
	</ItemGroup>
  <UsingTask
    AssemblyFile="$(xUnitLibPath)"
    TaskName="Xunit.Runner.MSBuild.xunit" />
  
	<Target Name="RunTests">
    <Message Text="xunit library path = $(xUnitLibPath)"/>
    <Message Text="output path = $(OutputPath)"/>
    <xunit Assemblies="@(TestAssemblies)"></xunit>
	</Target>
</Project>